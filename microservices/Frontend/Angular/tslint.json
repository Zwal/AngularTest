{
	"extends": "tslint:recommended",

	"rulesDirectory": [
    	"node_modules/codelyzer"
  	],

    "rules": {
		"angular-whitespace": [true, "check-interpolation", "check-pipe"],
		"banana-in-box": true,
		"templates-no-negated-async": true,
		"directive-selector": [true, "attribute", "hs", "camelCase"],
		"component-selector": [true, "element", "hs", "kebab-case"],
		"use-input-property-decorator": true,
		"use-output-property-decorator": true,
		"use-host-property-decorator": true,
		"use-view-encapsulation": true,
		"no-attribute-parameter-decorator": true,
		"no-input-rename": true,
		"no-output-rename": true,
		"no-forward-ref": true,
		"use-life-cycle-interface": true,
		"use-pipe-transform-interface": true,
		"pipe-naming": [true, "camelCase", "hs"],
		"component-class-suffix": true,
		"directive-class-suffix": true,
		"templates-use-public": true,
		"no-access-missing-member": true,
		"invoke-injectable": true,
		"template-to-ng-template": true,

	    "align": [true,
	        "parameters",
	        "arguments",
	        "statements"
	    ],
		"array-type": [true, "generic"],
		"arrow-parens": [false],
		"ban-comma-operator": true,
	    "interface-name": [false],
		"max-file-line-count": [true, 300],
		"member-access": [true, "no-public"],
	    "member-ordering": [true,
			{
    			"order": [
					"static-field",
					"instance-field",
					"constructor",
					"public-instance-method",
					"protected-instance-method",
					"private-instance-method"
				]
			}
	    ],
		"no-angle-bracket-type-assertion": true,
		"no-console": [false],
		"no-duplicate-switch-case": true,
		"no-redundant-jsdoc": true,
		"no-require-imports": true,
		"no-return-await": true,
		"no-this-assignment": true,
		"object-literal-key-quotes": [true, "as-needed"],
		"object-literal-sort-keys": false,
		"ordered-imports": [false, {"grouped-imports": true}],
	    "quotemark": [true, "single"],
		"semicolon": [true, "never"],
		"triple-equals": [true],
	    "variable-name": [true, "ban-keywords", "check-format"]
   	}
}
